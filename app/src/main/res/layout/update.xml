<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/prefState">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:text="State :"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="StateNumber"
                        android:textStyle="bold"

                        android:id="@+id/StatePrefNumber"
                        android:layout_marginStart="10dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="30"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textStyle="bold"
                            android:text="Active"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:text="ActiveNumber"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="30"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textStyle="bold"
                            android:text="Active"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:text="ActiveNumber"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="30"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textStyle="bold"
                            android:text="Active"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:text="ActiveNumber"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/AcrossIndia"
            android:layout_below="@+id/prefState">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:text="Acroo India :"
                        />
                    <TextView
                        android:id="@+id/AcrossIndiaTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="StateNumber"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="30"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textStyle="bold"
                            android:text="Total Active"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textStyle="bold"
                            android:textColor="@color/blue"
                            android:text="ActiveNumber"
                            android:id="@+id/ActiveNumberAcroosIndia"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="30"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textStyle="bold"
                            android:text="Total recover"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:text="ActiveNumber"
                            android:id="@+id/RecoverNumberAcroosIndia"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="30"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textStyle="bold"
                            android:text="Total Deaths"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:text="ActiveNumber"
                            android:id="@+id/DeathNumberAcroosIndia"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel2"
        android:layout_below="@+id/rel">

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
          android:layout_margin="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="40"
                android:layout_height="wrap_content"
                android:text="States"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="@color/blue"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:text="Recover"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:text="Deaths"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

        </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/lin2"/>

</RelativeLayout>

    <ProgressBar
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/progresUpdate"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>


</RelativeLayout>